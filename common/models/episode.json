{
  "name": "Episode",
  "description": "Media episode",
  "plural": "episodes",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "uid": {
      "type": "String",
      "id": true,
      "required": true,
      "index": true
    },
    "title": {
      "type": "String"
    },
    "description": {
      "type": "String"
    },
    "tags": {
      "type": [
        "String"
      ]
    },
    "publish": {
      "type": "Date"
    },
    "language": {
      "type": "String"
    },
    "author": {
      "type": "String"
    },
    "duration": {
      "type": "Number"
    },
    "hd": {
      "type": "Boolean"
    },
    "views": {
      "type": "Number",
      "default": 0
    },
    "youtube": {
      "type": "String"
    }
  },
  "validations": [],
  "relations": {
    "show": {
      "type": "belongsTo",
      "model": "Show"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone"
    },
    {
      "accessType": "WRITE",
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "RW"
    }
  ],
  "methods": {}
}
