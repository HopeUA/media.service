{
  "name": "Show",
  "description": "Media show",
  "plural": "shows",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "uid": {
      "type": "String",
      "id": true,
      "required": true,
      "index": true
    },
    "title": {
      "type": "String"
    },
    "description": {
      "type": {
        "short": "String",
        "medium": "String",
        "full": "String",
        "days": "String",
        "time": "String"
      }
    }
  },
  "validations": [],
  "relations": {
    "category": {
      "type": "belongsTo",
      "model": "Category"
    },
    "episodes": {
      "type": "hasMany",
      "model": "Episode"
    }
  },
  "acls": [],
  "methods": {}
}
